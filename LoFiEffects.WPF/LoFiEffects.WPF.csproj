<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ImplicitUsings>enable</ImplicitUsings>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>LoFiEffects.WPF</Title>
    <Authors>BenPollard</Authors>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <RepositoryUrl>https://github.com/benpollarduk/Lofieffects.wpf</RepositoryUrl>
    <PackageProjectUrl>https://github.com/benpollarduk/Lofieffects.wpf</PackageProjectUrl>
    <Description>A library of WPF controls that present content in reduced fidelity.</Description>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="LoFiPresenter.cs">
      <SubType>Code</SubType>
    </Compile>
  </ItemGroup>

</Project>
